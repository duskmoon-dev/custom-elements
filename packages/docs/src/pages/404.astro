---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Page Not Found" description="The page you're looking for doesn't exist.">
  <div class="not-found">
    <h1>404</h1>
    <p>Page not found</p>
    <p class="description">The page you're looking for doesn't exist or has been moved.</p>
    <a href="/duskmoon-elements/" class="home-link">Go to Homepage</a>
  </div>
</BaseLayout>

<style>
  .not-found {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    min-height: 100vh;
    text-align: center;
    padding: 2rem;
  }

  h1 {
    font-size: 8rem;
    margin: 0;
    background: linear-gradient(135deg, var(--color-primary), var(--color-secondary, #8b5cf6));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  p {
    font-size: 1.5rem;
    margin: 0.5rem 0;
  }

  .description {
    font-size: 1rem;
    opacity: 0.7;
    margin-bottom: 2rem;
  }

  .home-link {
    display: inline-flex;
    align-items: center;
    padding: 0.75rem 1.5rem;
    background-color: var(--color-primary);
    color: var(--color-on-primary, white);
    border-radius: 0.5rem;
    text-decoration: none;
    font-weight: 500;
    transition: transform 0.2s;
  }

  .home-link:hover {
    transform: translateY(-2px);
    text-decoration: none;
  }
</style>
